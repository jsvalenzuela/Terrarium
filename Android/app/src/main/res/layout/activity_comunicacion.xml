<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_principal"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="net.londatiga.android.bluetooth.activity_comunicacion"
android:theme="@style/AppTheme">

    <TextView
        android:id="@+id/tv_Temperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="94dp"
        android:text="Temperatura"
        android:textAppearance="@android:style/TextAppearance.Material.Display1" />

    <TextView
        android:id="@+id/tv_SensorTemp"
        android:layout_width="121dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/tv_Temperatura"
        android:layout_alignBottom="@+id/tv_Temperatura"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:layout_toEndOf="@+id/tv_Temperatura"
        android:layout_toRightOf="@+id/tv_Temperatura"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:id="@+id/tv_Humedad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Temperatura"
        android:layout_marginTop="17dp"
        android:text="Humedad"
        android:textAppearance="@android:style/TextAppearance.Material.Display1" />

    <TextView
        android:id="@+id/tv_SensorHumedad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_SensorTemp"
        android:layout_alignStart="@+id/tv_SensorTemp"
        android:layout_alignLeft="@+id/tv_SensorTemp"
        android:layout_alignBottom="@+id/tv_Humedad"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="2dp"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <Spinner
        android:id="@+id/sp_Modo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp" />

    <Switch
        android:id="@+id/sw_Ventilacion"
        android:layout_width="394dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_Humedad"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:switchTextAppearance="@android:style/TextAppearance.Material.Large"
        android:text="Ventilacion"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#2D6B88" />

    <Switch
        android:id="@+id/sw_TechoDescubierto"
        android:layout_width="382dp"
        android:layout_height="60dp"
        android:layout_below="@+id/sw_Ventilacion"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="1dp"
        android:switchTextAppearance="@android:style/TextAppearance.Material.Large"
        android:text="Techo Descubierto"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#2D6B88" />

    <Switch
        android:id="@+id/sw_Iluminacion"
        android:layout_width="394dp"
        android:layout_height="60dp"
        android:layout_below="@+id/sw_TechoDescubierto"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:switchTextAppearance="@android:style/TextAppearance.Material.Large"
        android:text="Iluminacion"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#2D6B88" />

    <Switch
        android:id="@+id/sw_Riego"
        android:layout_width="394dp"
        android:layout_height="60dp"
        android:layout_below="@+id/sw_Iluminacion"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="1dp"
        android:switchTextAppearance="@android:style/TextAppearance.Material.Large"
        android:text="Riego"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#2D6B88" />

</RelativeLayout>
